extends base

block content
    main.main
        .forgotPassword-form
            h2.heading-secondary.ma-bt-lg Enter your email address
            form.form.form--forgotPassword
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)

                .form__group
                    button.btn.btn--green Send